{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
        "DOM",
        "ES2022"
        ],
        "rootDir": "src",
        "module": "ES2022",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "preserveConstEnums": true
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "**/*.test.js"
    ]
}